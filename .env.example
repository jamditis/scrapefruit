# Scrapefruit - Environment Variables
# Copy this file to .env and fill in your actual values

# Flask configuration
# Set to "true" for development, "false" for production
FLASK_DEBUG=false

# Secret key for Flask sessions
# Generate a secure random key for production:
#   python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-this-to-a-secure-random-string

# Authentication (for web deployment via Cloudflare Tunnel)
# Set AUTH_ENABLED=true to require login
AUTH_ENABLED=false
AUTH_USERNAME=admin
AUTH_PASSWORD=change-this-password

# LLM Configuration (optional)
# Ollama is auto-detected if running locally. These are fallbacks.
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=qwen2.5:0.5b

# Cloud LLM fallbacks (only needed if not using Ollama)
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...

# Video transcription (optional)
# WHISPER_MODEL=tiny
# WHISPER_DEVICE=cpu
# VIDEO_USE_2X_SPEED=true

# Google Sheets export (optional)
# GOOGLE_CREDENTIALS_PATH=path/to/credentials.json
